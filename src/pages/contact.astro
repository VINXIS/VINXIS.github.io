---
import Default from '../layouts/Default.astro';

const email = "oykxf2@gmail.com";
const corsaceEmail = "contact@corsace.io";

const meta = {
    title: "Contact",
    ogTitle: "Contact",
    description: "Contact VINXIS",
    ogDescription: "Contact VINXIS",
    ogType: "website",
    ogUrl: "https://vinxis.moe",
    ogSiteName: "Vinxis",
    ogLocale: "en_US",
    ogImage: "https://vinxis.moe/vinxisOrange.png",
    twitterCard: "summary_large_image",
    twitterTitle: "Contact",
    twitterDescription: "Contact VINXIS",
    twitterImage: "https://vinxis.moe/vinxisOrange.png",
}
---

<Default meta={meta}>
    <div class="page contact-page">
        <h1 class="title">
            Contact
        </h1>
        <p class="contact-description">
            If you have any questions or would like to get in touch, please reach out through the following methods:
        </p>
        <ul class="contact-list">
            <li class="contact-item">
                Email: <a
                    class="contact-link"
                    href={`mailto:${email}`}
                >
                    {email}
                </a>
            </li>
            <li class="contact-item">
                Discord: <a
                    class="contact-link"
                    href="https://discord.com/users/352605625869402123"
                >
                    corsace.io
                </a>
            </li>
        </ul>
        <ul class="contact-list">
            <li class="contact-item">
                Corsace Email: <a
                    class="contact-link"
                    href={`mailto:${corsaceEmail}`}
                >
                    {corsaceEmail}
                </a>
            </li>
            <li class="contact-item">
                Corsace Discord: <a
                    class="contact-link"
                    href="https://discord.gg/Z6vEMsr"
                    target="_blank"
                >
                    https://discord.gg/Z6vEMsr
                </a>
            </li>
        </ul>
        <ul class="contact-list">
            <li class="contact-item">
                <a
                    class="contact-link"
                    href="/resumes/dev.pdf"
                >
                    Resume (Software Development)
                </a>
            </li>
            <li class="contact-item">
                <a
                    class="contact-link"
                    href="/resumes/mate.pdf"
                >
                    Resume (Materials Engineering)
                </a>
            </li>
        </ul>
    </div>
</Default>

<style>
.contact-page {
    background-color: var(--dark-neutral);
    height: calc(100vh - 15rem);
    text-align: right;
}

.contact-description {
    font-size: 1rem;
    color: #ffffff;
    margin-bottom: 1rem;
}

.contact-list {
    list-style-type: none;
    padding-left: 0;
    padding-bottom: 10px;
}

.contact-item {
    font-size: 1rem;
    color: #ffffff;
    margin-bottom: 0.5rem;
}

.contact-link {
    color: #009aff;
    text-decoration: none;
    cursor: pointer;
}

.contact-link:hover {
    color: #007acc;
    text-decoration: underline;
}
</style>