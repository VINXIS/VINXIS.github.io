---
import { Image } from "astro:assets";
import Default from "../layouts/Default.astro";
import vinxisOrange from "../images/vinxisOrange.png";

const meta = {
    title: "VINXIS",
    description: "I make music and other stuff",
    ogTitle: "VINXIS",
    ogDescription: "I make music and other stuff",
    ogType: "website",
    ogUrl: "https://vinxis.moe",
    ogSiteName: "VINXIS",
    ogLocale: "en_US",
    ogImage: "https://vinxis.moe/metaImage.png",
    twitterCard: "summary_large_image",
    twitterTitle: "VINXIS",
    twitterDescription: "I make music and other stuff",
    twitterImage: "https://vinxis.moe/metaImage.png",
};
---

<Default meta={meta}>
    <div class="main-page">
        <div class="logo-container">
            <Image
                class="logo"
                src={vinxisOrange}
                alt="VINXIS Logo"
            />
            <h1 class="name">VINXIS</h1>
        </div>
    </div>
    <span slot="hidden" class="hidden">I make music and other stuff</span>
    <span slot="hidden" class="hidden" style="top:calc(10vw + 3rem + 30vh); left:0; right:0; display:flex; justify-content:center;">You can find hidden text on every page!</span>
    <span slot="hidden" class="hidden" style="top:200px; left:initial; right:300px;">How u doin? Lemme know <a href="/me">here</a></span>
    <span slot="hidden" class="hidden" style="top:250px; left:140px;"><a href="https://youtu.be/pQs26c1klAU" target="_blank">I got a 103 fever for the past 6 months</a></span>
</Default>

<style>
    .main-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .logo-container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .logo {
        width: 10vw;
        height: 10vw;
    }

    .name {
        font-size: 3rem;
        margin: 0;
    }
</style>
